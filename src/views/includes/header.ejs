<!-- header -->
<nav class="sbr-navbar">
  <div class="sbr-navbar-container">
    <a class="sbr-navbar-brand" href="<%= config.siteUrl %>/">Snappy Book Review</a>
    <button class="sbr-navbar-toggler" type="button" data-bs-toggle="collapse"
      data-bs-target="#sbr-navbar-main-dropdown">
      <span></span>
    </button>
    <div class="sbr-navbar-collapse collapse" id="sbr-navbar-main-dropdown">
      <ul class="sbr-navbar-space-right">
        <li>
          <a href="<%= config.siteUrl %>/">Home</a>
        </li>
      </ul>
