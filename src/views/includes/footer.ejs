<script src="<%= config.siteUrl %>/js/main.js"></script>
<script>
  document.getElementById('logout_button').addEventListener('click',
    function () {
      event.preventDefault();
      var xhttp = new XMLHttpRequest();
      xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
          Common.Account.checkLogin();
        }
      };
      xhttp.open('POST', '<%= config.siteUrl %>/account/log-out/submit/', true);
      xhttp.send();
    });
</script>
<script>
  document.body.style.background = 'url(\'<%- config.siteUrl %>/img/lotsofbooksbackground.jpg\')';
</script>